<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/standardPadding"
    android:background="@drawable/standard_xml_dialog_bg"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/descriptionSize"
        android:text="文件名" />
    <TextView
        android:id="@+id/htmlFileNameDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standardMargin"
        android:textSize="@dimen/descriptionSize" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/descriptionSize"
        android:text="文件位置" />
    <TextView
        android:id="@+id/htmlFilePathDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standardMargin"
        android:textSize="@dimen/descriptionSize" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/descriptionSize"
        android:text="创建时间" />
    <TextView
        android:id="@+id/htmlFileCreateDateDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standardMargin"
        android:textSize="@dimen/descriptionSize" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/descriptionSize"
        android:text="最近查看时间" />
    <TextView
        android:id="@+id/htmlFleModifiedDateDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/descriptionSize" />
</LinearLayout>